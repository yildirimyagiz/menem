{
  "extends": ["@acme/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "moduleSuffixes": [".ios", ".android", ".native", ""],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "build",
    "dist",
    ".next",
    ".expo"
  ]
}
