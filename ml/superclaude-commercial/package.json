{
  "name": "persona-ai",
  "version": "1.0.0",
  "description": "Persona AI Coding Assistant - Professional AI Development Tool",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:electron\"",
    "dev:web": "next dev -p 5001",
    "dev:electron": "env NODE_ENV=development pnpm exec wait-on http://localhost:5001 && pnpm exec electron .",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "next build",
    "build:electron": "electron-builder",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "superclaude",
    "electron",
    "nextjs",
    "typescript"
  ],
  "author": "SuperClaude Team",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "aceternity-ui": "^0.2.2",
    "autoprefixer": "^10.4.21",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.0",
    "bull": "^4.11.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.0",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "express-rate-limit": "^6.10.0",
    "framer-motion": "^10.16.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "motion": "^12.23.11",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "postcss": "^8.5.6",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "stripe": "^13.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "winston": "^3.10.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.superclaude.app",
    "productName": "SuperClaude",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
